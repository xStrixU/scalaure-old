datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id() @default(autoincrement())
  firstName String
  lastName  String?
  email     String     @unique
  password  String
  roles     UserRole[]

  @@map("users")
}

model UserRole {
  id     Int          @id() @default(autoincrement())
  user   User         @relation(fields: [userId], references: [id])
  userId Int
  name   UserRoleName

  @@map("roles")
}

enum UserRoleName {
  USER
}
